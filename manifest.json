{
  "manifest_version": 3,
  "name": "Instagram Following Tracker",
  "version": "1.0",
  "description": "Track Instagram following changes",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ]
}
